<div class="relative">
  <%= link_to edit_pages_category_path(@page, category) do %>
    <div class="grid grid-cols-12 py-4 items-center hover:bg-gray-100 transition-colors px-5">
      <div class="col-span-7 font-medium"><%= category.name %></div>
      <div class="col-span-2 text-gray-600 text-sm"><%= category.slug %></div>
      <div class="col-span-2 text-gray-400 text-sm">
        <%= pluralize(category.posts.count, 'post') %>
      </div>
      <div class="col-span-1"></div>
    </div>
  <% end %>
  <div class="dropdown dropdown-end absolute right-5 top-1/2 transform -translate-y-1/2 z-10">
    <div tabindex="0" role="button" class="p-1">
      <div class="btn btn-ghost btn-square">
        <i class="iconoir-more-vert text-xl"></i>
      </div>
    </div>
    <ul tabindex="0" class="dropdown-content menu dropdown-list min-w-52">
      <li>
        <%= link_to "Edit", edit_pages_category_path(@page, category) %>
      </li>
      <li>
        <a href="https://<%= category.page.domain %>/<%= category.page.slug %>/categories/<%= category.slug %>" target="_blank">
          <p>Preview</p>
        </a>
      </li>
      <li>
        <%= link_to "Show all posts", pages_posts_path(request.query_parameters.merge("category_slug": category.slug)) %>
      </li>
      <div class="divider my-0"></div>
      <li>
        <%= button_to "Delete Category", pages_category_path(@page, category), method: :delete,
                      class: "text-red-500" %>
      </li>
    </ul>
  </div>
</div>
