<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 mt-5">
  <div class="py-4">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-semibold text-gray-900">API Tokens</h1>
    </div>

    <% if @api_tokens.empty? %>
      <div class="mt-4 p-4 bg-white shadow rounded-lg">
        <p class="text-gray-500">No API tokens found. Create your first token below.</p>
        <%= form_with model: [:settings, @workspace, APIToken.new], url: settings_api_tokens_path, class: "mt-4" do |form| %>
          <div class="flex items-center space-x-4">
            <%= form.text_field :name, placeholder: "Token name", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <%= form.submit "Create API Token", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="mt-4 overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Token</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Last Used</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Expires At</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% @api_tokens.each do |api_token| %>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= api_token.name %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= api_token.token %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= api_token.last_used_at&.to_formatted_s(:short) || 'Never' %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= api_token.expires_at&.to_formatted_s(:short) || 'Never' %></td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <%= link_to "Delete", settings_api_token_path(api_token), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this API token?" }, class: "text-red-600 hover:text-red-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>
