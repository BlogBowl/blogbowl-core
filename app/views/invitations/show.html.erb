<% content_for :title, "Invitation" %>
<div class="p-8 w-[450px] bg-white rounded-lg">
 <h2 class="text-xl mb-4">Pending invite</h2>
  <div class="text-center">
    <%= @from.avatar(size: 3).html_safe %>
    <p class="mt-3 mb-4 text-lg"><b><%= @from.formatted_name %></b> invited you to the <br>"<b><%= @member.workspace.title %></b>"</p>

    <%= @member.workspace.member_avatars(size: 1).html_safe %>
    <% if @member.workspace.members.count > 1 %>
      <p class="text-sm text-slate-600"><%= @member.workspace.members.count %> members have already accepted</p>
    <% end %>

    <div class="flex justify-between items-center mt-10">
      <p class="text-sm text-slate-600">This invite is valid for 7 days</p>
      <%= button_to "Accept", accept_invitation_path(token: params[:token]), method: :post, class: "btn btn-primary" %>
    </div>
  </div>
</div>
