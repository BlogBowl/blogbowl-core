<% content_for :head do %>
  <%= render "public/shared/head/search", search_query: @search_query %>
<% end %>

<div class="min-h-screen">
  <section class="pt-10 px-4 sm:px-6 lg:px-8">
    <div class="hero-header max-w-7xl mx-auto">
      <div class="breadcrumbs border w-fit px-6 mx-auto mb-5">
        <% default_breadcrumbs("Search").each do |breadcrumb| %>
          <% if breadcrumb[:url].present? %>
            <%= link_to(breadcrumb[:title], breadcrumb[:url]) %>
            <i class="iconoir-nav-arrow-right"></i>
          <% else %>
            <p>
              <%= breadcrumb[:title] %>
            </p>
          <% end %>
        <% end %>
      </div>
      <h1>Search results for: <%= @search_query %></h1>
    </div>
  </section>
  <section class="mt-5 pb-10 md:pb-20 relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @posts.length > 0 %>
      <div class="mx-auto mt:5 md:mt-10 space-y-5 md:space-y-10 w-full">
        <%= render partial: "public/help_docs_1/pages/post", collection: @posts %>
      </div>
      <%= pagy_navigation %>
    <% else %>
      <p class="text-center">
        Nothing matched your search terms.
        Please try again with some different keywords.
      </p>
    <% end %>
  </section>
</div>
