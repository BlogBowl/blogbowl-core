<div class="flex flex-col gap-6 py-12 sm:gap-8 lg:flex-row lg:items-start lg:gap-12 lg:py-16 xl:gap-20 border-t">
  <div class="w-full shrink-0 space-y-4 lg:sticky lg:max-w-sm lg:top-8">
    <p class="text-base font-medium opacity-80">
      <time datetime="<%= format_datetime(post.first_published_at) %>">
        <%= format_date(post.first_published_at) %>
      </time>
    </p>
    <%= link_to dynamic_prefix(public_post_path(post)), class: 'block pressable' do %>
      <h3 class="font-bold space-x-2.5">
        <span>
          <%= post.title %>
        </span>
      </h3>
    <% end %>

    <% if post.authors.first.present? %>
      <%= link_to dynamic_prefix(public_author_path(post.authors.first)), class: 'relative flex items-center gap-2 pressable' do %>
        <% if post.authors.first.avatar_picture.attached? %>
          <div class="relative flex items-center gap-2">
            <%= image_tag post.authors.first.avatar_picture, alt: post.authors.first.formatted_name, class: 'h-8 w-8 shrink-0 object-cover rounded-full' %>
          </div>
        <% end %>
        <div class="font-semibold opacity-90 transition-all duration-200 hover:opacity-70">
          <%= post.authors.first.formatted_name %>
          <span class="absolute inset-0" aria-hidden="true"></span>
        </div>
      <% end %>
    <% end %>

  </div>
  <div class="flex-1 space-y-5">
    <%= link_to dynamic_prefix(public_post_path(post)), class: 'relative h-96 block overflow-hidden shadow rounded-2xl pressable' do %>
      <% if post.cover_image.persisted? %>
        <%= image_tag post.cover_image, alt: post.title, class: 'absolute h-full w-full bg-secondary-50 object-cover inset-0 rounded-2xl' %>
      <% else %>
        <div class="absolute h-full w-full bg-secondary-50 object-cover inset-0 rounded-2xl border border-dashed flex items-center justify-center">
          <i class="iconoir-mask-square text-3xl text-base-300"></i>
        </div>
      <% end %>
    <% end %>
    <div class="flex flex-wrap gap-2">
      <div class="flex flex-wrap gap-2">
        <% if post.category.present? %>
          <%= link_to dynamic_prefix(public_category_path(post.category)), class: 'pressable' do %>
            <span class="px-3 py-1 rounded-full text-xs font-medium text-black" style="background-color: <%= post.category.color %>">
              <%= post.category.name %>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= link_to dynamic_prefix(public_post_path(post)), class: 'block pressable' do %>
      <p class="text-lg font-normal opacity-80 line-clamp-3 lg:line-clamp-none">
        <%= post.description %>
      </p>
    <% end %>
    <p class="flex text-sm font-semibold uppercase tracking-widest hover:opacity-80">
      <%= link_to dynamic_prefix(public_post_path(post)), class: 'inline-flex items-center pressable' do %>
        Read More
        <svg class="h-4 w-4 transform transition-all duration-100 ml-2 group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      <% end %>
    </p>
  </div>
</div>