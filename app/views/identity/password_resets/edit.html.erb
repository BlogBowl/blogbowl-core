<% content_for :title, "Reset password" %>

<div class="flex min-h-screen w-full items-center justify-center">
  <!-- Left side - Auth form -->
  <div class="card w-full md:w-fit md:min-w-[500px] p-10 drop-shadow-lg bg-white">
    <div class="w-full max-w-md">
      <div class="mb-8 flex items-center justify-center">
        <%= image_tag("logo-with-text.png", width: 120) %>
      </div>

      <div class="w-full">

        <!-- Sign In Content -->
        <div class="space-y-6">
          <div>
            <h1 class="text-3xl font-bold text-center">Create new password!</h1>
          </div>

          <%= render partial: 'shared/flashes' %>

          <%= form_with(url: identity_password_reset_path, method: :patch, class: 'space-y-2') do |form| %>
            <%= form.hidden_field :sid, value: params[:sid] %>

            <div class="space-y-2">
              <%= form.label :password, class: "block text-sm font-medium mb-1" %>
              <%= form.password_field :password, required: true, autofocus: true, placeholder: "New password", autocomplete: "new-password", class: 'w-full' %>
            </div>
            <div class="space-y-2">
              <%= form.label :password_confirmation, class: "block text-sm font-medium mb-1" %>
              <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Repeat new password", class: 'w-full' %>
            </div>

            <%= form.submit "Save changes", class: 'btn btn-neutral w-full btn-lg mt-5' %>
          <% end %>

        </div>

        <div class="mt-6 text-center text-sm flex flex-col space-y-2">
          <div>
            <span>Remembered your password?</span>
            <%= link_to "Sign in!", sign_in_path, class: "cursor-pointer hover:underline ml-1 font-medium text-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

