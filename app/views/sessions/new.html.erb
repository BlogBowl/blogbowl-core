            <div class="space-y-2">
              <%= form.label :email, class: "block text-sm font-medium mb-1" %>
              <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "w-full" %>
            </div>
            <div class="space-y-2">
