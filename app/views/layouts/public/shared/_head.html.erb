<head>
  <!-- Title should be added per page, not in layout-->
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <%= javascript_include_tag "submodules/core/javascript/public_application", "data-turbo-track": Rails.env.production? ? "reload" : "", type: "module" %>
  <%= stylesheet_link_tag "public/basic", "data-turbo-track": Rails.env.production? ? "reload" : "" %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/gh/iconoir-icons/iconoir@main/css/iconoir.css", "data-turbo": "false" %>
  <% if @page_settings.favicon.attached? %>
    <link rel="icon" href="<%= get_full_url(dynamic_prefix(url_for(@page_settings.favicon))) %>" type="image/x-icon">
    <link rel="shortcut icon" href="<%= get_full_url(dynamic_prefix(url_for(@page_settings.favicon))) %>" type="image/x-icon">
  <% end %>

  <%= yield :head %>

  <%= @page_settings.head_html&.html_safe %>
</head>