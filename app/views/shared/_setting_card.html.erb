<%= link_to path, class: "group relative bg-white card card-border border-base-300 p-6 hover:border-primary hover:shadow-lg hover:bg-primary-content/30 transition-all duration-200 overflow-hidden cursor-pointer" do %>
  <div class="flex items-center gap-x-2">
    <div class="w-10 h-10 bg-primary-content flex items-center justify-center rounded-lg flex-shrink-0">
      <i class="<%= icon %> text-xl text-primary"></i>
    </div>
    <h3 class="font-medium"><%= title %></h3>
  </div>
  <div class="min-h-16">
    <p class="opacity-70 text-sm my-2"><%= description %></p>
  </div>
  <div class="flex items-center text-sm text-primary opacity-0 group-hover:opacity-100 transition-opacity duration-200 gap-x-2 absolute bottom-3">
    <span><%= button_title %></span>
    <i class="iconoir-arrow-right text-primary"></i>
  </div>
<% end %>