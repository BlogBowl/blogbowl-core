<div class="grid grid-cols-10 py-4 items-center hover:bg-gray-100 transition-colors px-5">
  <div class="flex items-center col-span-4">
    <img class="h-12 w-12 rounded-full" alt="Subscriber: <%= subscriber.email %>" src="<%= get_gravatar_url(subscriber.email) %>"/>
    <div class="flex flex-col ml-4">
      <p class="font-medium text-sm "><%= subscriber.email %></p>
      <p class="text-gray-500 text-xs "><%= time_ago_in_words(subscriber.created_at) %> ago</p>
    </div>
  </div>
  <div class="col-span-2 text-xs font-medium w-fit px-3 py-1 rounded-full capitalize border <%= subscriber_status_badge(subscriber.status) %>"><%= subscriber.status %></div>
  <div class="col-span-1 text-gray-400 text-sm"><%= subscriber.deliver_count %></div>
  <div class="col-span-1 text-gray-400 text-sm"><%= subscriber.open_rate %></div>
  <div class="col-span-1 text-gray-400 text-sm"><%= subscriber.click_rate %></div>
  <div class="col-span-1 text-gray-400 text-sm"><%= subscriber.location %></div>
</div>
